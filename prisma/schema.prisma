generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DIRECT_URL")
  // directUrl = env("NEXT_PUBLIC_DATABASE_URL")
  // url      = "postgresql://macbookpro:Yengzzkie18@localhost:5432/mydb?schema=public"
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  list      String[]
}
